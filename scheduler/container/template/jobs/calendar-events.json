{
    "metadata": {
        "name": "Refresh calendar events every Saturday morning",
        "description": "Generates a list of calendar events and saves them to a JSON file.",
        "runner": "upcoming-calendar-events",
        "schedule": "*/60 * * * *"
    },
    "config": {
        "daysInFuture": 14,
        "accounts": [
            {
                "account": "$^{microsoft-calendar-account}",
                "calendars": ["Family", "School Calendar", "United States holidays"]
            }
        ],
        "outputDataFilePath": "calendar/upcoming-events.json"
    }
}